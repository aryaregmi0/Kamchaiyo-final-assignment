{
  "name": "kamchaiyo-backend",
  "version": "1.0.0",
  "description": "Backend for KamChaiyo Job Portal",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon -r dotenv/config --experimental-json-modules src/index.js",
    "seed:admin": "node src/utils/seedAdmin.js",
    "seed": "node src/utils/seedData.js",
    "seed:destroy": "node backend/utils/seeder.js --destroy",
    "test": "node -r dotenv/config --experimental-vm-modules node_modules/jest/bin/jest.js --config ./jest.config.cjs --runInBand --detectOpenHandles",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config ./jest.config.cjs --runInBand --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config ./jest.config.cjs --runInBand --coverage"
  },
  "author": "Full-Stack AI",
  "license": "ISC",
  "dependencies": {
    "@langchain/core": "^0.3.66",
    "@langchain/google-genai": "^0.2.16",
    "axios": "^1.11.0",
    "cloudinary": "^2.6.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.30",
    "mongoose": "^8.4.0",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.4",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-runtime": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@faker-js/faker": "^9.9.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.3.1",
    "jest": "^30.0.4",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.3"
  }
}
